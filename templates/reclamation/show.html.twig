{% extends 'base.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block body %}
    <h1>Reclamation</h1>
   
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reclamation.id }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ reclamation.message }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ reclamation.category }}</td>
            </tr>
            <tr>
                <th>Reponse</th>
                <td>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Reponses</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for reponse in reclamation.reponses %}
                                <tr>
                                    <td>{{ reponse.reponse }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reclamation_index') }}" style="text-decoration: none; color: blue; font-size: 1.2rem;">&larr; Back to list</a>

    <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}">edit</a>

    {{ include('reclamation/_delete_form.html.twig') }}
{% endblock %}
